<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyTeam.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:MyTeam"
    xmlns:local="clr-namespace:MyTeam"
    xmlns:navigationdrawer="clr-namespace:Syncfusion.SfNavigationDrawer.XForms;assembly=Syncfusion.SfNavigationDrawer.XForms">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="450" />
            <RowDefinition Height="50" />

            <RowDefinition />
        </Grid.RowDefinitions>
        <!--  Κεντρική μπάρα με hamburger button και label  -->
        <StackLayout
            Grid.Row="0"
            BackgroundColor="Black"
            Orientation="Horizontal">
            <Button
                x:Name="hamburgerButton"
                BackgroundColor="Black"
                Clicked="HamburgerButton_OnClicked"
                FontSize="20"
                HeightRequest="50"
                HorizontalOptions="Start"
                Image="hamburgerIcon.png"
                WidthRequest="48" />
            <Label
                x:Name="headerLabel"
                BackgroundColor="Black"
                FontSize="16"
                HeightRequest="50"
                HorizontalOptions="Center"
                Text="Κεντρική Σελίδα"
                TextColor="White"
                VerticalTextAlignment="Center" />
            <Button
                x:Name="backButton"
                BackgroundColor="Black"
                Clicked="BackButton_Clicked"
                HorizontalOptions="EndAndExpand"
                Text="ΑΡΧΙΚΗ"
                TextColor="White"
                WidthRequest="60" />
        </StackLayout>
        <navigationdrawer:SfNavigationDrawer
            x:Name="navigationDrawer"
            Grid.Row="1"
            DrawerHeaderHeight="10"
            DrawerWidth="200">

            <navigationdrawer:SfNavigationDrawer.ContentView>
                <Grid x:Name="mainContentView" BackgroundColor="Black">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="400" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label
                        x:Name="contentLabel"
                        Grid.Row="0"
                        FontSize="14"
                        HorizontalOptions="Center"
                        Text="Content View"
                        TextColor="Black"
                        VerticalOptions="Center" />
                </Grid>
            </navigationdrawer:SfNavigationDrawer.ContentView>
            <navigationdrawer:SfNavigationDrawer.DrawerContentView>
                <ListView
                    x:Name="listView"
                    BackgroundColor="White"
                    ItemSelected="ListView_OnItemSelected"
                    VerticalOptions="Start">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout HeightRequest="40">
                                    <Label
                                        Margin="10,7,0,0"
                                        FontSize="15"
                                        Text="{Binding}" />
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </navigationdrawer:SfNavigationDrawer.DrawerContentView>
        </navigationdrawer:SfNavigationDrawer>

        <StackLayout Grid.Row="2" VerticalOptions="End">

            <local:AdMobView HeightRequest="50" WidthRequest="320" />
        </StackLayout>


    </Grid>

</ContentPage>
